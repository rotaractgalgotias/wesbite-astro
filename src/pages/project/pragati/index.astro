---
import {getCollection} from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import format from 'date-fns/format/index.js';
import EventGallery from "../../../components/event-gallery";
import Gallery from "../../../components/gallery.astro";
import { Image } from "astro:assets";
import cover from '../../../assets/pragatiCover.jpg';
import img2 from '../../../assets/pragati00.jpeg';
import img3 from '../../../assets/pragati01.jpeg';
import img4 from '../../../assets/pragati02.jpeg';
import img5 from '../../../assets/pragati03.jpeg';
import TimeLine from "./timeline";

---
<Layout
  title="Project Pragati - School Renovation Initiative by Rotaract Galgotias"
  description="Project Pragati, led by Rotaract Galgotias and supported by the Rotary Club of Delhi Southend, aims to renovate a local school for underprivileged children, providing them with a better learning environment."
  ogImage={"http://2023-24.rotaractgalgotias.org/pagrati-logo.png"}
>
<section>
  <div>
     <!-- Hero -->
     <div class="relative overflow-hidden">
        <!-- Gradients -->
        <div aria-hidden="true" class="flex absolute -top-96 start-1/2 transform -translate-x-1/2">
           <div class="bg-gradient-to-r from-violet-300/50 to-purple-100 blur-3xl w-[25rem] h-[44rem] rotate-[-60deg] transform -translate-x-[10rem]"></div>
           <div class="bg-gradient-to-tl from-blue-50 via-blue-100 to-blue-50 blur-3xl w-[90rem] h-[50rem] rounded-fulls origin-top-left -rotate-12 -translate-x-[15rem]"></div>
        </div>
        <!-- End Gradients -->
        <div class="relative z-10">
           <div class=" mx-auto px-4 sm:px-6 lg:px-8 py-8  lg:py-16">
              <div class=" text-center mx-auto">
                 <div class="grid md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center">
                    <div>
                       <h1 class="block text-start text-3xl font-bold text-gray-800 sm:text-4xl lg:text-6xl lg:leading-tight">Transforming Classrooms, Transforming <span class="text-blue-600">Lives</span></h1>
                       <p class="mt-3 items-start text-start text-xl text-gray-800 ">Join us in revitalizing a school and creating brighter, more engaging learning environments for students</p>
                       <div class="rounded-md w-fit mt-8 shadow"><a href="https://forms.gle/mXqb4xikKGNToHQR7" target="_blank"
                          class="flex items-center justify-center w-full px-8 py-3 text-base font-medium leading-6 text-white transition duration-150 ease-in-out bg-blue-500 border border-transparent rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue md:py-4 md:text-lg md:px-10">
                          Join Us
                          </a>
                       </div>
                    </div>
                    <!-- End Col -->
                    <div class="relative ms-4">
                       <Image class="w-full rounded-md" alt="Banner" src={img2}>
                       <div class="absolute inset-0 -z-[1] bg-gradient-to-tr from-gray-200 via-white/0 to-white/0 size-full rounded-md mt-4 -mb-4 me-4 -ms-4 lg:mt-6 lg:-mb-6 lg:me-6 lg:-ms-6 "></div>
                       <!-- SVG-->
                       <div class="absolute bottom-0 start-0">
                          <svg class="w-2/3 ms-auto h-auto text-white " width="630" height="451" viewBox="0 0 630 451" fill="none" xmlns="http://www.w3.org/2000/svg">
                             <rect x="531" y="352" width="99" height="99" fill="currentColor"/>
                             <rect x="140" y="352" width="106" height="99" fill="currentColor"/>
                             <rect x="482" y="402" width="64" height="49" fill="currentColor"/>
                             <rect x="433" y="402" width="63" height="49" fill="currentColor"/>
                             <rect x="384" y="352" width="49" height="50" fill="currentColor"/>
                             <rect x="531" y="328" width="50" height="50" fill="currentColor"/>
                             <rect x="99" y="303" width="49" height="58" fill="currentColor"/>
                             <rect x="99" y="352" width="49" height="50" fill="currentColor"/>
                             <rect x="99" y="392" width="49" height="59" fill="currentColor"/>
                             <rect x="44" y="402" width="66" height="49" fill="currentColor"/>
                             <rect x="234" y="402" width="62" height="49" fill="currentColor"/>
                             <rect x="334" y="303" width="50" height="49" fill="currentColor"/>
                             <rect x="581" width="49" height="49" fill="currentColor"/>
                             <rect x="581" width="49" height="64" fill="currentColor"/>
                             <rect x="482" y="123" width="49" height="49" fill="currentColor"/>
                             <rect x="507" y="124" width="49" height="24" fill="currentColor"/>
                             <rect x="531" y="49" width="99" height="99" fill="currentColor"/>
                          </svg>
                       </div>
                       <!-- End SVG-->
                    </div>
                    <!-- End Col -->
                 </div>
              </div>
           </div>
        </div>
     </div>
     <!-- End Hero -->
  </div>
</section>
<section>
  <div class="relative overflow-hidden  ">
  <!-- Gradients -->
  <!-- End Gradients -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Title -->
  <div class="text-center">
     <div class="max-w-2xl text-center mx-auto">
        <h1 class="block  text-3xl font-bold text-gray-800 sm:text-4xl md:text-5xl ">About the <span class="text-blue-600">Project</span></h1>
     </div>
     <p class="mt-4 text-lg text-gray-800 ">
        Discover how we are transforming learning spaces for a brighter future.
     </p>
  </div>
  <!-- Renovation Plan -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
     <!-- Grid -->
     <div class="grid md:grid-cols-2 gap-12">
        <div class="lg:w-3/4">
           <h2 class="text-3xl text-gray-800 font-bold lg:text-4xl ">
              Project Pragati: Creating a Better Learning Environment
           </h2>
           <p class="mt-3 text-gray-800 ">
              Pragati is a transformative initiative by Rotaract Galgotias Educational Institutions aimed at renovating and revitalizing a local government school. This project is dedicated to creating a more conducive and stimulating learning environment for young children from nursery to grade 4. By improving the school's infrastructure and amenities, we aim to enhance the educational experience and well-being of the students.
           </p>
           
        </div>
        <!-- End Col -->
        <div class="space-y-6 lg:space-y-10">
           <!-- Icon Block 1 -->
           <div class="flex">
              <!-- Icon -->
              <span class="flex-shrink-0 inline-flex justify-center items-center size-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm mx-auto ">
                 <svg class="flex-shrink-0 size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                 </svg>
              </span>
              <div class="ms-5 sm:ms-8">
                 <h3 class="text-base sm:text-lg font-semibold text-gray-800 ">
                    Full Repair and Painting
                 </h3>
                 <p class="mt-1 text-gray-600 ">
                    Repairing the walls from both inside and outside and painting the walls with white colour.                
                 </p>
              </div>
           </div>
           <!-- End Icon Block 1 -->
           <!-- Icon Block 2 -->
           <div class="flex">
              <!-- Icon -->
              <span class="flex-shrink-0 inline-flex justify-center items-center size-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm mx-auto ">
                 <svg class="flex-shrink-0 size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 9a2 2 0 0 1-2 2H6l-4 4V4c0-1.1.9-2 2-2h8a2 2 0 0 1 2 2v5Z"/>
                    <path d="M18 9h2a2 2 0 0 1 2 2v11l-4-4h-6a2 2 0 0 1-2-2v-1"/>
                 </svg>
              </span>
              <div class="ms-5 sm:ms-8">
                 <h3 class="text-base sm:text-lg font-semibold text-gray-800 ">
                    Setting Up Air Coolers
                 </h3>
                 <p class="mt-1 text-gray-600 ">
                    Will put 4 Air Coolers to keep the inside of the hall cool for a better learning environment for children                
                 </p>
              </div>
           </div>
           <!-- End Icon Block 2 -->
           <!-- Icon Block 3 -->
           <div class="flex">
              <!-- Icon -->
              <span class="flex-shrink-0 inline-flex justify-center items-center size-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm mx-auto ">
                 <svg class="flex-shrink-0 size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M7 10v12"/>
                    <path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"/>
                 </svg>
              </span>
              <div class="ms-5 sm:ms-8">
                 <h3 class="text-base sm:text-lg font-semibold text-gray-800 ">
                    Making proper windows
                 </h3>
                 <p class="mt-1 text-gray-600 ">
                    We will be covering the grills and will make windows for air ventilation, this will protect the school from dust.                
                 </p>
              </div>
           </div>
           <!-- End Icon Block 3 -->
           <div class="absolute bottom-12 -start-20 -z-[1] size-48 bg-gradient-to-b from-green-500 to-white p-px rounded-lg ">
              <div class="bg-white size-48 rounded-lg"></div>
           </div>
           <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 -z-[1]">
              <div class="w-0 h-0 border-left-[24px] border-left-transparent border-right-[24px] border-right-transparent border-bottom-[48px] border-bottom-blue-500"></div>
           </div>
        </div>
     </div>
     <TimeLine client:visible/>
     <div class="relative flex flex-col items-center max-w-screen-xl px-4 mx-auto md:flex-row sm:px-6 p-8">
        <div class="flex items-center py-5 md:w-1/2  md:pt-10 md:pr-10">
           <div class="text-left">
              <h2
                 class="text-4xl font-extrabold leading-10 tracking-tight text-gray-800 sm:text-5xl sm:leading-none md:text-6xl">
                 Mega
                 <span class="font-bold text-blue-500">Wall Painting</span> Drive
              </h2>
              <p class="max-w-md mx-auto mt-3 text-base text-gray-600 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                 We will do a wall painting drive and we are inviting artist "Mannmauji" aka Mr. Aftab for guiding us to paint the school with vibrant artworks.
                 <br> Contribute your part with art. 
                 Click on the button below to participate in wall art on 16th June 2024 from 10AM onwards.
              </p>
              <div class="mt-5 sm:flex md:mt-8">
                 <div class="rounded-md shadow"><a href="https://forms.gle/mXqb4xikKGNToHQR7" target="_blank"
                    class="flex items-center justify-center w-full px-8 py-3 text-base font-medium leading-6 text-white transition duration-150 ease-in-out bg-blue-500 border border-transparent rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue md:py-4 md:text-lg md:px-10">
                    Contribute
                    </a>
                 </div>
              </div>
           </div>
        </div>
        <div class="flex items-center py-5 md:w-1/2  md:pt-10 md:pl-10">
           <div class="relative w-full p-3 rounded  md:p-8">
              <div class="rounded-lg bg-white text-black w-full">
                 <img src="https://www.getty.edu/360/event_images/heaven.jpg" />
              </div>
           </div>
        </div>
     </div>
     
  </div>
</section>
<section>
  <!-- Hero -->
  <div class="relative overflow-hidden">
     <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="max-w-2xl text-center mx-auto">
           <h1 class="block text-3xl font-bold text-gray-800 sm:text-4xl md:text-5xl ">Experience <span class="text-blue-600">Pragati</span> in Action </h1>
           <p class="mt-3 text-lg text-gray-800 ">Witness Pragati transforming young minds' learning environment.</p>
        </div>
        <div class="mt-10 flex justify-center relative max-w-5xl mx-auto">
           <iframe width="560" height="315" src="https://www.youtube.com/embed/f0yUKkQ5YjE?si=MEQ9hpnCQrQc9Xx4" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
     </div>
  </div>
  <!-- End Hero -->
</section>
<section>
  <div class="container mx-auto px-5 py-2 lg:px-32">
     <div class="max-w-2xl text-center mx-auto">
        <h1 class="block pb-6 text-3xl font-bold text-gray-800 sm:text-4xl md:text-5xl "><span class="text-blue-600">Contribute</span> Your Part In This Initiative </h1>
     </div>
     <div class="grid md:grid-cols-2 grid-cols-1 md:p-0 p-8 gap-8 place-items-center">
        <div class="relative mt-6 flex w-96 flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
           <div class="bg-blue-gray-500 shadow-blue-gray-500/40 relative mx-4 -mt-6 h-56 overflow-hidden rounded-xl bg-clip-border text-white shadow-lg">
              <img src="https://www.raisinghealth.org.uk/images/general-fr-images/fundraising_cropped-500x353.jpg" alt="card-image" />
           </div>
           <div class="p-6">
              <h5 class="text-gray-800 mb-2 block text-2xl font-bold leading-snug tracking-normal antialiased">Help in Fundraising</h5>
              <p class="block text-base  leading-relaxed text-inherit antialiased">Contribute some amount to this kind initiative each penny counts as it will help us to do the arrangements in a more better way</p>
           </div>
           <div class="p-6 pt-0">
              <a href="https://forms.gle/hz8W5csHsp3htiNc6" target="_blank" class="select-none rounded-lg bg-blue-600 px-6 py-3 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-blue-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none" type="button">Contribute Now</a>
           </div>
        </div>
        <div class="relative mt-6 flex w-96 flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
           <div class="bg-blue-gray-500 shadow-blue-gray-500/40 relative mx-4 -mt-6 h-56 overflow-hidden rounded-xl bg-clip-border text-white shadow-lg">
              <img src="https://i.pinimg.com/736x/cb/47/f8/cb47f87fa096dffe7ff612a9b4ed2d8f.jpg" alt="card-image" />
           </div>
           <div class="p-6">
              <h5 class="text-gray-800 mb-2 block text-2xl font-bold leading-snug tracking-normal antialiased">Help in Wall Painting</h5>
              <p class="block text-base  leading-relaxed text-inherit antialiased">Its time to show your artistic skills for a good cause, join us in this initiative and paint the walls with your artwork</p>
           </div>
           <div class="p-6 pt-0">
              <a href="https://forms.gle/xggLuzRyEwJ5XDzKA" target="_blank"class="select-none rounded-lg bg-blue-600 px-6 py-3 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-blue-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none" type="button">Register Now</a>
           </div>
        </div>
     </div>
  </div>
</section>
<section>
  <div class="container mx-auto px-5 py-2 lg:px-32 lg:pt-24">
     <div class="max-w-2xl text-center mx-auto">
        <h1 class="block pb-6 text-3xl font-bold text-gray-800 sm:text-4xl md:text-5xl "><span class="text-blue-600">Memories</span> of Pragati's Journey </h1>
     </div>
     <div class="-m-1 flex flex-wrap md:-m-2">
        <div class="flex w-1/2 flex-wrap">
           <div class="w-1/2 p-1 md:p-2">
              <Image
                 alt="gallery"
                 class="block h-full w-full rounded-lg object-cover object-center"
                 src={img2} />
           </div>
           <div class="w-1/2 p-1 md:p-2">
              <Image
                 alt="gallery"
                 class="block h-full w-full rounded-lg object-cover object-center"
                 src={img3} />
           </div>
           <div class="w-full p-1 md:p-2">
              <Image
                 alt="gallery"
                 class="block h-full w-full rounded-lg object-cover object-center"
                 src={img4} />
           </div>
        </div>
        <div class="flex w-1/2 flex-wrap">
           <div class="w-full p-1 md:p-2">
              <Image
                 alt="gallery"
                 class="block h-full w-full rounded-lg object-cover object-center"
                 src={img5} />
           </div>
           <div class="w-1/2 p-1 md:p-2">
              <Image
                 alt="gallery"
                 class="block h-full w-full rounded-lg object-cover object-center"
                 src={img2} />
           </div>
           <div class="w-1/2 p-1 md:p-2">
              <Image
                 alt="gallery"
                 class="block h-full w-full rounded-lg object-cover object-center"
                 src={img4} />
           </div>
        </div>
     </div>
  </div>
</section>

</Layout>
